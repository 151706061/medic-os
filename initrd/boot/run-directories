#!/bin/sh

main()
{
  for dir in "$@"; do
    if ! [ -d "$dir" ]; then
      continue
    fi
    for path in "$dir"/*; do
      if ! [ -x "$file" ]; then
        continue
      fi
      if ! "$path"; then
        local file="`basename "$path"`"
        warn "Script '$file' exited with non-zero status"
      fi
    done
  done

  return "$?"
}

warn()
{
  echo "Warning: $*" >&2
}

fatal()
{
  echo "Fatal: $*" >&2
  exit 1
}

usage()
{
  echo "Usage: $0 directory..." >&2
  exit 111
}

main "$@"
exit "$?"

