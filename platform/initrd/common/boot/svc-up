#!/bin/sh

source '/boot/include/utility'
source '/boot/include/supervisor'

up()
{
  local package="$1"
  local service="$2"

  supervisor_service_up "$package" "$service" \
    || fatal "Failed to start service '$service' in '$package'"

  info "Service '$package/$service' started successfully"
  return 0
}

main()
{
  local package="$1"
  shift 1

  if [ -z "$package" ]; then
    usage
  fi

  require_root
  supervisor_init

  if [ "$#" -le 0 ]; then
    supervisor_list_down_services "$package" | while read service; do
      up "$package" "$service"
    done
  else
    for service in "$@"; do
      up "$package" "$service"
    done
  fi

  if [ $# -le 0 ]; then
    success "All services in package '$package' have started"
  else
    success "Selected services in package '$package' have started"
  fi

  return 0
}

usage()
{
  echo "Usage: $0 <package-name> [service-name]..."
  exit 111
}

main "$@"
exit "$?"

