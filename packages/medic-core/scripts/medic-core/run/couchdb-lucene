#!/bin/sh

start()
{
  local self="`realpath "$0"`"
  local base="`dirname "$self"`"

  source "$base/../env" &&
  merge_environment /srv/software &&
  \
  exec nohup su -c "exec '$PACKAGE_ROOT/java/bin/run'" couchdb-lucene \
    >> '/srv/storage/medic-core/couchdb-lucene/logs/startup.log' 2>&1
}

main()
{
  start
  return "$?"
}

main
exit "$?"

