#!/bin/sh

start()
{
  local self="`realpath "$0"`"
  local base="`dirname "$self"`"

  source "$base/../env" &&
  merge_environment /srv || return 255

  mkdir -p /etc/logrotate.d \
    || return 1

  if ! [ -f /sbin/logrotate ]; then
    ln -sf "$PACKAGE_ROOT/sbin/logrotate" /sbin/logrotate \
      || return 2
  fi

  return 0
}

main()
{
  start
  return "$?"
}

main
exit "$?"

